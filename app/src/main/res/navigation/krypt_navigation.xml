<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/krypt_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ir.mehdiyari.krypt.ui.splash.SplashFragment"
        android:label="fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ir.mehdiyari.krypt.ui.login.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="ir.mehdiyari.krypt.ui.logout.CreateAccountFragment"
        android:label="CreateAccountFragment" />

</navigation>